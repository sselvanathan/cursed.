<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{{ module }}</title>
    {% block stylesheets %}
        <link type="text/css" href="/view/config/Assets/css/layoutGrid.css" rel="stylesheet">
    {% endblock %}
</head>
<body>
<div id="layout" class="pure-g">
    <div class="sidebar">
        <div class="header">
            <h1 class="brand-title">{{ module }}</h1>
            <h2 class="brand-tagline">Meow</h2>
            <nav class="nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="pure-button" href="/index.php">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="pure-button" href="/index.php">About</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<div class="content pure-u-1 pure-u-md-3-4">
    <div>
        <!-- A wrapper for all the blog posts -->
        <div class="posts">
            <h1 class="content-subhead">Pinned Post</h1>

            <!-- A single blog post -->
            <section class="post">
                <header class="post-header">
                    <img width="48" height="48" alt="User avatar" class="post-avatar"
                         src="/img/common/tilo-avatar.png">

                    <h2 class="post-title">Pinned Post</h2>

                    <p class="post-meta">
                        By <a href="#" class="post-author">User</a> under <a
                                class="post-category post-category-design" href="#">CSS</a> <a
                                class="post-category post-category-pure" href="#">PHP</a>
                    </p>
                </header>

                <div class="post-description">
                    <p>
                        This Feature isnt out yet :^)
                    </p>
                </div>
            </section>
        </div>

        <div class="posts">
            <h1 class="content-subhead">Recent Posts</h1>

            {% for blogPost in allBlogPosts %}
                <section class="post">
                    <header class="post-header">
                        <img width="48" height="48" alt="User avatar" class="post-avatar"
                             src="/img/common/tilo-avatar.png">
                        <a href="/blog/{{ blogPost.id }}">
                            <h2 class="post-title">{{ blogPost.title|e }}</h2>
                        </a>
                        <p class="post-meta">
                            By <a href="#" class="post-author">User</a> under <a
                                    class="post-category post-category-design" href="#">CSS</a> <a
                                    class="post-category post-category-pure" href="#">PHP</a>
                        </p>
                    </header>
                    <div class="post-description">
                        <p>{{ blogPost.post|e }}</p>
                    </div>
                </section>
            {% endfor %}
        </div>
    </div>
</div>
<footer>
    <div id="footer-wrapper">
        <span id="creator-name">Senthuran Selvanathan</span>
        <div id="links">
            <a id="creator-email" class="btn" href="/index.php">Schick mir eine E-mail</a>
            <a id="github" class="btn" href="https://github.com/sselvanathan">Folg mir auf Github</a>
            <a id="impressum" class="btn" href="https://www.selvanathan.me//?p=impressum">Impressum</a>
        </div>
    </div>
</footer>
