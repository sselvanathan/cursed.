{% include 'header/header.twig' %}
<div class="content pure-u-1 pure-u-md-3-4">
    <div>
        <!-- A wrapper for all the blog posts -->
        <div class="posts">
            <h1 class="content-subhead">Pinned Post</h1>

            <!-- A single blog post -->
            <section class="post">
                <header class="post-header">
                    <img width="48" height="48" alt="User avatar" class="post-avatar"
                         src="/img/common/tilo-avatar.png">

                    <h2 class="post-title">Pinned Post</h2>

                    <p class="post-meta">
                        By <a href="#" class="post-author">User</a> under <a
                                class="post-category post-category-design" href="#">CSS</a> <a
                                class="post-category post-category-pure" href="#">PHP</a>
                    </p>
                </header>

                <div class="post-description">
                    <p>
                        This Feature isnt out yet :^)
                    </p>
                </div>
            </section>
        </div>

        <div class="posts">
            <h1 class="content-subhead">Recent Posts</h1>

            {% for blogPost in allBlogPosts %}
                <section class="post">
                    <header class="post-header">
                        <img width="48" height="48" alt="User avatar" class="post-avatar"
                             src="/img/common/tilo-avatar.png">
                        <a href="/blog/{{ blogPost.id }}">
                            <h2 class="post-title">{{ blogPost.title|e }}</h2>
                        </a>
                        <p class="post-meta">
                            By <a href="#" class="post-author">User</a> under <a
                                    class="post-category post-category-design" href="#">CSS</a> <a
                                    class="post-category post-category-pure" href="#">PHP</a>
                        </p>
                    </header>
                    <div class="post-description">
                        <p>{{ blogPost.post|e }}</p>
                    </div>
                </section>
            {% endfor %}
        </div>
    </div>
</div>
{% include 'footer/footer.twig' %}
